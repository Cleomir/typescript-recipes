{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "A Express starter server using Typescript and Webpack",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/node.bundle.js",
    "build:dev": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "watch:all": "npm-run-all --parallel watch:build watch:server --print-label",
    "watch:build": "webpack --watch --config webpack.dev.js",
    "watch:server": "nodemon ./dist/node-bundle.js --watch ./dist",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "docs": "npx typedoc"
  },
  "author": "Cleomir Machado Gomes",
  "license": "MIT",
  "dependencies": {
    "@microsoft/tsdoc": "^0.12.20",
    "ajv": "^6.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@typescript-eslint/typescript-estree": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
